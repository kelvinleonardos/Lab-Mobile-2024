<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <include layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/foto"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/bio" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_below="@+id/foto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:fontFamily="times"
        android:text="Zabryna Andiny"
        android:textColor="#76453B"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/nama"
        android:layout_marginTop="15dp"
        android:background="#B19470"></View>

    <TextView
        android:id="@+id/jk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="times"
        android:text="Jenis Kelamin :"
        android:textSize="18sp"
        android:textColor="#3C3633"
        android:textStyle="bold"
        android:layout_below="@+id/nama"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"/>

    <RadioGroup
        android:id="@+id/radup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/jk">

        <RadioButton
            android:id="@+id/laki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="times"
            android:text="Laki-laki"
            android:textSize="16sp"
            android:textColor="#8C6A5D"
            android:layout_below="@+id/jk"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="7dp"/>

        <RadioButton
            android:id="@+id/perempuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="times"
            android:text="Perempuan"
            android:textSize="16sp"
            android:textColor="#8C6A5D"
            android:layout_below="@+id/jk"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/haldisukai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="times"
        android:text="Hal yang disukai :"
        android:textSize="18sp"
        android:textColor="#3C3633"
        android:textStyle="bold"
        android:layout_below="@+id/radup"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"/>

    <CheckBox
        android:id="@+id/ngoding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="times"
        android:text="Ngoding"
        android:textColor="#8C6A5D"
        android:textSize="16sp"
        android:layout_below="@+id/haldisukai"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="7dp"/>

    <CheckBox
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="times"
        android:text="Uang"
        android:textColor="#8C6A5D"
        android:textSize="16sp"
        android:layout_below="@+id/ngoding"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="-16dp"/>

    <CheckBox
        android:id="@+id/dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="times"
        android:text="Dia"
        android:textColor="#8C6A5D"
        android:textSize="16sp"
        android:layout_below="@+id/money"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="-16dp"/>

    <CheckBox
        android:id="@+id/lain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="times"
        android:text="Lainnya"
        android:textColor="#8C6A5D"
        android:textSize="16sp"
        android:layout_below="@+id/dia"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="-16dp"/>

    <EditText
        android:id="@+id/input"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lain"
        android:backgroundTint="#8C6A5D"
        android:layout_marginLeft="40dp"
        android:hint="Masukan hal lainnya   "
        android:textSize="16sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/input"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="-48dp"
        android:backgroundTint="#7F5539"
        android:text="OK" />

    <ScrollView
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:id="@+id/linearlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

</RelativeLayout>